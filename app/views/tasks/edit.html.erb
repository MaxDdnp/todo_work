<br><br>
<div class="header">
<h1><center>Edit task</center></h1>
</div>
<br><br>
<div class="ts_edit">
<label class="errors"></label>
<%= form_for @task, url: { action: "update" }  do |f| %>

<div class="input-group" style="width: 300px;
  margin: auto;">
          <span class="input-group-addon" id="basic-addon1">Name</span>
          <%= f.text_field :name, :class => "form-control" %> 
      </div>
      <br>
  <div class="container" style="width: 330px;
  margin: auto;">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    <%= f.text_field :deadline, :placeholder => @task.deadline, :value => @task.deadline, :class => "form-control" %>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
    </div>
</div>
  <br>
  <div style="width: 88px;
  margin: auto;"><%= f.submit "Save task", :class => 'btn btn-success' %></div>
<% end %>
<br>
<div style="width: 100px;
  margin-left: 50px;"><%= link_to 'Back to projects', projects_path %></div>
</div>
        